.content
  .page-header
    %h1 Register an account
  .row
    .span2
      &nbsp;
    .span12
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :wrapper => :bootstrap, :html => {:class => 'form-horizontal'}) do |f|
        %fieldset
          = f.error_notification
          = f.input :email, :required => true, :autofocus => true
          = f.input :password, :required => true
          = f.input :password_confirmation, :required => true
          .form-actions
            = f.button :submit, "Register", :class => 'btn-primary'
