= form_for [:manage, @manage_domain] do |f|
  -if @manage_domain.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manage_domain.errors.count, "error")} prohibited this manage_domain from being saved:"
      %ul
        - @manage_domain.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :catch_all
    = f.text_field :catch_all
  .field
    = f.label :alternative_names
    = f.text_field :alternative_names
  .actions
    = f.submit 'Save'
