.content
  .row
    .span16
      .options{:style => 'text-align:right; margin-bottom:20px'}
        = link_to 'New Domain', new_manage_domain_path, :class => 'btn primary'
      %h1 Domains
      %table
        %tr
          %th Name
          %th Catch all
          %th

        - @domains.each do |domain|
          %tr
            %td= domain.name
            %td= domain.catch_all
            %td
              .pull-right
                = link_to image_tag('manage.png'), manage_domain_path(domain)
                = link_to image_tag('delete.png'), manage_domain_path(domain), :method => 'DELETE', :confirm => 'Are you sure you wish to delete this domain?'


